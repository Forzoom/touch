{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "module": "esnext",
        "target": "es5",
        "lib": [
            "es2015",
            "dom"
        ],
    },
    "include": [
        "src/**/*.ts",
        "types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}